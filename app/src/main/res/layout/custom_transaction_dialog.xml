<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Transaction"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center"
        android:id="@+id/transactionText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transactionText"
        android:hint="Amount"
        android:inputType="number"
        android:layout_margin="10dp"
        android:id="@+id/amountText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountText"
        android:hint="Remarks"
        android:layout_margin="10dp"
        android:id="@+id/remarksText"/>

   <!-- <EditText
        android:id="@+id/contentText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remarksText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text=" f" />-->

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/remarksText"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        android:id="@+id/contentSpinner">
    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@+id/contentSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/transactionAddBtn"
        android:background="@drawable/rounded_border"/>
</RelativeLayout>